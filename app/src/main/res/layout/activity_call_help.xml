<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CallHelpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/callhelp_textview"
        android:text="@string/call_our_help_center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:drawableTop="@drawable/ic_phone_green_32dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/callhelp_number_textview"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_below="@+id/callhelp_textview"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tap_on_contact_number"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>