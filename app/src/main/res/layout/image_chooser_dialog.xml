<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_20ssp"
    android:background="@drawable/white_roundedcorner_bg"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:text="@string/select_image_from"
    android:textColor="#000"
    android:layout_gravity="center"
    android:textSize="@dimen/_15ssp"
    android:layout_height="wrap_content" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorAccent"
        android:layout_marginBottom="@dimen/_20ssp"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_chooser_camera"
        android:gravity="center"
        android:background="@drawable/buynow_red_roundcorner_bg"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:id="@+id/camera"
        android:padding="@dimen/_5ssp"
        android:text="Camera" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_chooser_gallery"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10ssp"
        android:background="@drawable/buynow_red_roundcorner_bg"
        android:textSize="@dimen/_15ssp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:id="@+id/gallary"
        android:padding="@dimen/_5ssp"
        android:text="Gallery" />

</LinearLayout>